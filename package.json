{
  "name": "w3x-ini-support",
  "publisher": "chentp0601", 
  "repository": {                           
    "type": "git",
    "url": "https://github.com/giveyousomecolorlooklook/w3x_ini_support.git"
  }, 
  "license": "MIT", 
  "displayName": "INI Config Navigator",
  "description": "Smart navigation for INI config files: go-to-definition, visual highlighting, hover preview, and auto-completion across multiple file types (.ini, .lua, .ts, .txt, .md)",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "ini",
    "config",
    "navigation",
    "goto-definition",
    "warcraft",
    "lua",
    "typescript",
    "hover",
    "completion"
  ],
  "activationEvents": [
    "onLanguage:ini",
    "onLanguage:lua",
    "onLanguage:plaintext",
    "onLanguage:typescript", 
    "onLanguage:markdown"
  ],
   "main": "./dist/extension.js",
  "contributes": {
      "languages": [
      {
        "id": "ini",
        "extensions": [".ini"]
      }
    ],
    "commands": [
      {
        "command": "w3x-ini-support.goToDefinition",
        "title": "跳转到INI配置项定义",
        "category": "INI Config Navigator"
      },
      {
        "command": "w3x-ini-support.goToReferences",
        "title": "查看INI配置项所有引用",
        "category": "INI Config Navigator"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
